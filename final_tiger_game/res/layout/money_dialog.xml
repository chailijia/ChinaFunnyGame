<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/money_dialog_bg" >

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:src="@drawable/dialog_close" />

    <LinearLayout
        android:id="@+id/layout_jifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="139dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/label_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/jifenzhi" />

        <EditText
            android:id="@+id/et_jifen"
            android:layout_width="216dp"
            android:layout_height="51dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/dialog_text_bg"
            android:enabled="true"
            android:hint="输入充值数额"
            android:singleLine="true"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="28dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_jifen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/label_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="216dp"
            android:layout_height="51dp"
            android:layout_marginLeft="13dp"
            android:background="@drawable/dialog_text_bg"
            android:hint="输入支付密码"
            android:singleLine="true"
            android:padding="10dp"
            android:textSize="28dp" />
    </LinearLayout>

    <!-- 确认按钮 -->

    <ImageButton
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/dialog_commit" />

</RelativeLayout>